    agent any

    tools {nodejs "node"}
    
    stages {
        stage('Build') {
            steps {
                echo 'Build stage'
                bat 'npm install'                
            }
        }
        stage('Test') {
                    steps {
                        echo 'Test stage'
                        bat 'npm test'
                    }
                }
        stage('Deliver') {
                    steps {
                        echo 'Deliver stage'
                        // sh './jenkins/scripts/deliver.sh'
                        // input message: 'Finished using the web site? (Click "Proceed" to continue)'
                        // sh './jenkins/scripts/kill.sh'
                    }
                }

    }
}
